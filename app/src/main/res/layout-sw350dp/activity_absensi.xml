<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:translationZ="100dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    >
    <com.wahana.wahanamobile.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#eeeeee"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@color/material_yellow"
                android:textAlignment="center"
                android:layout_gravity="center"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:id="@+id/layout_form"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:orientation="vertical"
            android:translationZ="100dp">
            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_marginTop="@dimen/margin_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationZ="100dp"
                android:padding="15dp"
                android:layout_marginLeft="@dimen/margin_root"
                android:layout_marginRight="@dimen/margin_root"
                android:orientation="vertical"
                android:background="@drawable/rounded_layout"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    >
                    <TableRow>
                        <ImageView
                            android:id="@+id/calendar_label"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/calendar_icon"
                            android:textColor="@color/primary_dark"
                            />
                        <TextView
                            android:id="@+id/calendar_isi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:textColor="@color/headermain_textcolor"
                            android:text="@string/calendar_isi"
                            android:textSize="16dp"/>
                    </TableRow>
                    <TableRow>
                        <ImageView
                            android:id="@+id/tanggal_jam_label"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/time_icon"
                            android:textColor="@color/primary_dark"/>
                        <TextView
                            android:id="@+id/tanggal_jam_isi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:textColor="@color/headermain_textcolor"
                            android:text="@string/tanggal_jam_isi"
                            android:textSize="16sp"/>
                    </TableRow>

                </TableLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <ImageView
                                android:id="@+id/kurir_label"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/people_icon"
                                android:textColor="@color/primary_dark"/>
                            <TextView
                                android:id="@+id/pengisi_isi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:textColor="@color/headermain_textcolor"
                                android:text="@string/pengisi_absensi_isi"
                                android:textSize="16sp"/>

                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:translationZ="100dp"
            android:padding="15dp"
            android:layout_marginLeft="@dimen/margin_root"
            android:layout_marginRight="@dimen/margin_root"
            android:layout_marginBottom="@dimen/margin_root"
            android:orientation="vertical"
            android:background="@drawable/rounded_layout"
            android:layout_below="@+id/info_layout"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_layout"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/table_terkirim">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TableLayout
                            android:id="@+id/tabel_absen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow>
                                <TextView
                                    android:id="@+id/tipe_absen_label"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/main_tipe_absen_label"
                                    android:textColor="@color/main_textcolor"
                                    android:textSize="16sp"/>
                            </TableRow>
                        </TableLayout>
                        <Spinner
                            android:id="@+id/spinner_absensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_spinner"
                            android:paddingLeft="8dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:popupBackground="@color/material_indigo"
                            android:layout_below="@+id/tabel_absen"
                            />
                             <TableLayout
                    android:id="@+id/tabel_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner_absensi">
                    <TableRow>
                        <TextView
                            android:id="@+id/foto_diri_label"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_foto_diri_label"
                            android:textColor="@color/main_textcolor"
                            android:textSize="16sp"/>
                    </TableRow>
                </TableLayout>
                            <ListView
                                android:id="@+id/listView"
                                android:visibility="gone"
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                android:layout_below="@+id/tabel_foto"
                                android:background="@drawable/border_imageview"/>
                                <ImageView
                                    android:id="@+id/imageView"
                                    android:visibility="visible"
                                    android:layout_width="fill_parent"
                                    android:layout_height="120dp"
                                    android:background="@drawable/border_imageview"
                                    android:layout_below="@+id/tabel_foto">
                                </ImageView>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_below="@+id/imageView">
                                    <com.wahana.wahanamobile.helper.ButtonPlus
                                        style="@style/button"
                                        android:id="@+id/btn_submit_foto"
                                        android:layout_width="90dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:text="Ambil Foto"
                                        android:background="@drawable/roundedbutton"
                                        android:textColor="@color/white"
                                        />
                                </RelativeLayout>
                                <!--<fragment-->
                                <!--android:id="@+id/map"-->
                                <!--android:layout_margin="@dimen/margin_absensi_form"-->
                                <!--android:name="com.wahana.wahanamobile.fragment.MapFragment"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="350dp"-->
                                <!--android:layout_below="@+id/main_layout"/>-->
                                <ImageView
                                    android:id="@+id/mapView"
                                    android:layout_marginTop="@dimen/margin_absensi_form"
                                    android:layout_width="match_parent"
                                    android:layout_height="350dp"
                                    android:layout_below="@+id/main_layout"/>
                        </LinearLayout>
                      </ScrollView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bottom"
                android:background="#222a2a"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:translationZ="120dp"
                >
                <com.wahana.wahanamobile.helper.ButtonPlus
                    style="@style/button"
                    android:id="@+id/button_manifest"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="200dp"
                    android:layout_below="@+id/input_kode_agen"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:background="@drawable/roundedbutton"
                    android:textColor="@color/white"
                    android:onClick="onClick"
                    android:text="SUBMIT"/>
            </RelativeLayout>
        </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

    </com.wahana.wahanamobile.VerticalScrollView>
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:translationZ="100dp"
        app:headerLayout="@layout/nav_header"
        android:divider="#eeeeee"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="#142631"/>
</android.support.v4.widget.DrawerLayout>
