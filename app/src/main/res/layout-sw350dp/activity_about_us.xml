<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:translationZ="100dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    >
    <com.wahana.wahanamobile.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#eeeeee"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:background="@color/material_yellow"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    app:layout_scrollFlags="enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </android.support.design.widget.AppBarLayout>
            <RelativeLayout
                android:id="@+id/layout_form"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="100dp">
                <RelativeLayout
                    android:id="@+id/info_layout"
                    android:layout_marginTop="@dimen/margin_toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:translationZ="100dp"
                    android:padding="15dp"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_layout"
                    >
                    <TextView
                        android:id="@+id/judul_about_us"
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:paddingLeft="@dimen/margin_new"
                        android:paddingRight="@dimen/margin_new"
                        android:textColor="@color/dark"
                        android:text="@string/judul_about_us"
                        />
                    <TextView
                        android:id="@+id/isi_about_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_new"
                        android:paddingRight="@dimen/margin_new"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/dark"
                        android:layout_below="@id/judul_about_us"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:text="@string/isi_about_us"
                        android:textSize="12dp"
                        />
                    <RelativeLayout
                        android:id="@+id/people_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/isi_about_us">
                        <TextView
                            android:id="@+id/judul_people"
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin_new"
                            android:paddingRight="@dimen/margin_new"
                            android:paddingTop="5dp"
                            android:textColor="@color/dark"
                            android:text="@string/judul_people"
                            />
                        <LinearLayout
                            android:id="@+id/content_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/judul_people"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0"
                            >
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/skilled_image"
                                    android:layout_gravity="center"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/skilled_icon"/>
                                <TextView
                                    android:id="@+id/skilled_label"
                                    android:layout_width="90dp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/skilled_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/passionate_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/passionate_icon"/>
                                <TextView
                                    android:id="@+id/passionate_label"
                                    android:layout_width="90dp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/passionate_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/on_time_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/on_time_icon"/>
                                <TextView
                                    android:id="@+id/on_time_label"
                                    android:layout_width="90dp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/on_time_label"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/technology_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/people_layout">
                        <TextView
                            android:id="@+id/judul_technology"
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingLeft="@dimen/margin_new"
                            android:paddingRight="@dimen/margin_new"
                            android:paddingTop="5dp"
                            android:textColor="@color/dark"
                            android:text="@string/judul_technology"
                            />
                        <LinearLayout
                            android:id="@+id/content_technology"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/judul_technology"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/employ_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/employ_icon"/>
                                <TextView
                                    android:id="@+id/employ_label"
                                    android:layout_width="90dp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/employ_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/internet_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/internet_icon"/>
                                <TextView
                                    android:id="@+id/internet_label"
                                    android:layout_width="90dp"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/internet_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.33">
                                <ImageView
                                    android:id="@+id/quality_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quality_icon"/>
                                <TextView
                                    android:id="@+id/quality_label"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/quality_label"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/capability_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/technology_layout">
                        <TextView
                            android:id="@+id/judul_capability"
                            android:layout_width="match_parent"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark"
                            android:paddingLeft="@dimen/margin_new"
                            android:paddingRight="@dimen/margin_new"
                            android:paddingTop="5dp"
                            android:text="@string/judul_capability"
                            />
                        <LinearLayout
                            android:id="@+id/content_capability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/judul_capability"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:weightSum="1.0">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.25">
                                <ImageView
                                    android:id="@+id/trucks_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/trucks_icon"/>
                                <TextView
                                    android:id="@+id/trucks_label"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/trucks_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.25">
                                <ImageView
                                    android:id="@+id/operation_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/operation_icon"/>
                                <TextView
                                    android:id="@+id/operation_label"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/operation_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.25">
                                <ImageView
                                    android:id="@+id/retail_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/retail_icon"/>
                                <TextView
                                    android:id="@+id/retail_label"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/retail_label"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="0.25">
                                <ImageView
                                    android:id="@+id/staff_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/staff_icon"/>
                                <TextView
                                    android:id="@+id/staff_label"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:textColor="@color/dark"
                                    android:textSize="10sp"
                                    android:text="@string/staff_label"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
       </android.support.design.widget.CoordinatorLayout>
    </com.wahana.wahanamobile.VerticalScrollView>
    <ListView
        android:id="@+id/list_slidermenu"

        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        app:headerLayout="@layout/nav_header"
        android:divider="#eeeeee"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="#142631"/>
</android.support.v4.widget.DrawerLayout>