<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wahana.wahanamobile.Ops.ApprovalSJ.ListApprovalSJ">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="@color/material_yellow"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_scrollFlags="enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">


        <RelativeLayout
            android:id="@+id/atas"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/judul"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AFM12345"/>

            <!--<ListView-->
                <!--android:layout_below="@+id/judul"-->
                <!--android:id="@+id/listView"-->
                <!--android:dividerHeight="20dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="420dp">-->
            <!--</ListView>-->

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Tujuan"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/kotuj"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Tujuan"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/namtuj"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Status"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/kodestatus"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Status"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/namastatus"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Operasional"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/kodeops"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal TTK"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/tglttk"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.15"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Layanan"
                            />

                        <TextView
                            android:layout_weight="0.05"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            />

                        <TextView
                            android:id="@+id/layanan"
                            android:layout_weight="0.8"
                            android:textColor="@color/dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            />

                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </RelativeLayout>


        <com.wahana.wahanamobile.helper.ButtonPlus
            style="@style/button"
            android:layout_alignParentBottom="true"
            android:id="@+id/input_button"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/kodetujuan"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:text="Update Terkirim"
            android:background="@color/red"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
