<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:src="@drawable/wahana_logonew2018"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <!-- Email Label -->
        <EditText android:id="@+id/input_nama"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:drawableLeft="@drawable/login_nama"
            android:inputType="text"
            android:hint="nama"
            android:layout_below="@+id/image_logo"
            android:textColor="@color/iron"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />

        <!-- Password Label -->
        <EditText android:id="@+id/input_email"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:drawableLeft="@drawable/email"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:layout_below="@+id/image_logo"
            android:textColor="@color/iron"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />
        <!-- Password Label -->
        <EditText android:id="@+id/input_phone"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:drawableLeft="@drawable/login_phone"
            android:inputType="number"
            android:hint="phone"
            android:layout_below="@+id/image_logo"
            android:textColor="@color/iron"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />
        <!-- Password Label -->
        <EditText android:id="@+id/input_password"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:drawableLeft="@drawable/login_password"
            android:inputType="textPassword"
            android:hint="password"
            android:layout_below="@+id/image_logo"
            android:textColor="@color/iron"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />
        <!-- Password Label -->
        <EditText android:id="@+id/input_confirm_password"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:drawableLeft="@drawable/login_password"
            android:inputType="textPassword"
            android:hint="confirm password"
            android:layout_below="@+id/image_logo"
            android:textColor="@color/iron"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />
    </LinearLayout>

    <com.wahana.wahanamobile.helper.ButtonPlus
        style="@style/button"
        android:id="@+id/btn_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/roundedbutton"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="NEXT"
        android:onClick="OnClick"/>

</LinearLayout>
