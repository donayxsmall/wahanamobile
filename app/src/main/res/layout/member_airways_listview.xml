<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_new"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/label_ttk_header"
                android:text="Nomor TTK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:padding="3dp"
                android:gravity="left"
                android:layout_weight="0.3"/>
            <TextView
                android:id="@+id/pembanding1"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:padding="3dp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/nomor_ttk_header"
                android:text="Nomor TTK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:padding="3dp"
                android:gravity="left"
                android:layout_column="0"
                android:layout_weight="0.6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/label_keterangan"
                android:text="Keterangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:padding="3dp"
                android:gravity="left"
                android:layout_weight="0.3"/>
            <TextView
                android:id="@+id/pembanding2"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:padding="3dp"
                android:gravity="center"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/keterangan_header"
                android:text="Keterangan"
                android:padding="3dp"

                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:layout_weight="0.6"
                >
            </TextView>
        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_margin="10dp"
                    android:gravity="end"
                    >
                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_detail_airway"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="cek"
                        android:layout_margin="10dp"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        />
                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_delete_detail_airway"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:text="delete"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
            </LinearLayout>
