<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:translationZ="100dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    >
    <com.wahana.wahanamobile.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:clipChildren="false"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar_height"
                        android:background="@color/material_yellow"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        app:layout_scrollFlags="enterAlways"
                        android:translationZ="100dp"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

                </android.support.design.widget.AppBarLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_form"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationZ="100dp">
                <RelativeLayout
                    android:id="@+id/tracking_search"
                    android:background="@drawable/rounded_layout"
                    android:translationZ="100dp"
                    android:layout_marginTop="@dimen/margin_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_below="@+id/info_layout"
                    >

                    <TableLayout
                        android:id="@+id/track_shipping_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:id="@+id/input_shipping_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="@string/detail_member_airways"
                                android:textSize="16sp"
                                />
                        </TableRow>
                    </TableLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/status_terkirim"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:layout_below="@+id/tracking_search"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_layout_terkirim">
                    <ImageView
                        android:id="@+id/image_terkirim"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/terkirim_icon"
                        />
                    <TextView
                        android:id="@+id/terkirim_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="TERKIRIM"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_below="@+id/image_terkirim"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/status_belum_terkirim"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:layout_below="@+id/tracking_search"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_layout_takterkirim">
                    <ImageView
                        android:id="@+id/image_belum_terkirim"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/tidak_terkirim_icon"
                        />
                    <TextView
                        android:id="@+id/belum_terkirim_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="BELUM TERKIRIM"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_below="@+id/image_belum_terkirim"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/status_reture"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:layout_below="@+id/tracking_search"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_layout_reture">
                    <ImageView
                        android:id="@+id/image_reture"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/reture_icon"
                        />
                    <TextView
                        android:id="@+id/reture_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="BARANG DIKEMBALIKAN"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_below="@+id/image_reture"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/status_onprogress"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:layout_below="@+id/tracking_search"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="70dp"
                    android:background="@drawable/rounded_layout_onprogress">
                    <ImageView
                        android:id="@+id/image_onprogress"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/time_icon_white"
                        />
                    <TextView
                        android:id="@+id/onprogress_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="BELUM TERKIRIM"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_below="@+id/image_onprogress"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_tracking"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:padding="15dp"
                    android:layout_below="@+id/status_belum_terkirim"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_layout">
                    <TableLayout
                        android:id="@+id/data_resi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_tracking"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/pickup_icon"/>
                            <TextView
                                android:id="@+id/label_tracking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:text="AAZ00010"
                                android:textColor="#494949"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_calendar"
                                android:layout_width="40dp"
                                android:padding="5dp"
                                android:layout_height="40dp"
                                android:src="@drawable/calendar_icon"/>
                            <TextView
                                android:id="@+id/label_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:text="22/06/2010"
                                android:textColor="#494949"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:id="@+id/dikirim_label"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="DIKIRIM OLEH"
                        android:textSize="16sp"
                        android:layout_below="@+id/data_resi"
                        android:textColor="#494949"/>
                    <TableLayout
                        android:id="@+id/data_pengirim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/dikirim_label"
                        >
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_pengirim"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/people_icon"/>
                            <TextView
                                android:id="@+id/label_pengirim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:text="Nurul F (085879XXXX)"
                                android:textColor="#494949"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:id="@+id/ditujukan_label"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="DITUJUKAN KEPADA"
                        android:textSize="16dp"
                        android:layout_below="@+id/data_pengirim"
                        android:textColor="#494949"/>
                    <TableLayout
                        android:id="@+id/data_ditujukan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ditujukan_label"
                        >
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_ditujukan"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/people_icon"/>
                            <TextView
                                android:id="@+id/label_ditujukan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:text="WINA PERMATASARI(085879XXXX)DI KOTA PALEMBANG"
                                android:textColor="#494949"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:id="@+id/diterima_label"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="DITERIMA OLEH"
                        android:textSize="16dp"
                        android:layout_below="@+id/data_ditujukan"
                        android:textColor="#494949"/>
                    <TableLayout
                        android:id="@+id/data_diterima"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/diterima_label"
                        >
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_diterima"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/people_icon"/>
                            <TextView
                                android:id="@+id/label_diterima"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:text="WINA"
                                android:textColor="#494949"/>
                        </TableRow>
                    </TableLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tracking_result"
                    android:layout_width="match_parent"
                    android:translationZ="100dp"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_below="@+id/main_tracking"
                    android:layout_marginLeft="@dimen/margin_new"
                    android:layout_marginRight="@dimen/margin_new"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_layout">
                    <TextView
                        android:id="@+id/judul_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="@string/main_result_tracking"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        />
                    <ListView
                        android:id="@+id/list_search"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:translationZ="100dp"

                        android:layout_below="@+id/judul_result"
                        >
                    </ListView>

                </RelativeLayout>
            </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>
    </com.wahana.wahanamobile.VerticalScrollView>
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:translationZ="100dp"
        app:headerLayout="@layout/nav_header"
        android:divider="#eeeeee"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="#142631"/>
</android.support.v4.widget.DrawerLayout>
