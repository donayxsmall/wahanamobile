<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:textSize="20sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="1"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableLayout
                    android:id="@+id/tabel_detail_ttk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/nottk_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="@color/headermain_textcolor"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="TTK"/>
                        <TextView
                            android:id="@+id/pembanding"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="@color/headermain_textcolor"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text=":"/>
                        <TextView
                            android:id="@+id/nottk"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textColor="@color/headermain_textcolor"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="6767"/>

                        <TextView
                            android:id="@+id/keterangan_label"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textColor="@color/red"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text=""/>

                    </TableRow>


                </TableLayout>


                <TableLayout
                    android:id="@+id/tabel_batal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabel_detail_ttk">

                    <TableRow>
                        <TextView
                            android:id="@+id/kode_batal_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="@color/headermain_textcolor"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Status " />
                        <TextView
                            android:id="@+id/pembanding2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textColor="@color/headermain_textcolor"
                            android:padding="5dip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text=":"/>
                        <RadioGroup
                            android:id="@+id/radio_batal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/table_ttk"
                            android:orientation = "horizontal">
                            <RadioButton
                                android:id="@+id/radioya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#000000"
                                android:drawable="@drawable/custom_radiobutton"
                                android:text="Batal"
                                android:textColor="@color/main_textcolor"/>
                            <RadioButton
                                android:id="@+id/radiotidak"
                                android:layout_width="wrap_content"
                                android:buttonTint="#000000"
                                android:drawable="@drawable/custom_radiobutton"
                                android:layout_height="match_parent"
                                android:text="Pending"
                                android:textColor="@color/main_textcolor" />
                        </RadioGroup>
                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>
</RelativeLayout>
