<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clipChildren="false"
    >
    <RelativeLayout
        android:id="@+id/main_form"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_root"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/image_logo"
            android:src="@drawable/wahana_logonew2018"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />


        <TextView android:id="@+id/forgot_info"
            android:layout_width="fill_parent"
            android:layout_below="@+id/image_logo"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/accent"
            android:text="Masukkan email akun sesuai username anda"
            android:gravity="center"
            android:textSize="12dp"
            android:textColorHighlight="#11dff4"/>
        <!-- Email Label -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/input_username"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:background="@drawable/background_input"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:inputType="textEmailAddress"
            android:hint="Masukkan Email"
            android:layout_below="@+id/forgot_info"
            android:textColor="#000000"
            android:textColorHint="@color/iron"
            android:textSize="12dp"
            />

        <com.wahana.wahanamobile.helper.ButtonPlus
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@+id/input_username"
            android:layout_centerHorizontal="true"
            style="@style/button"
            android:id="@+id/btn_login"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/roundedbutton"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Ok"
            android:onClick="OnClick"/>


    </RelativeLayout>
</ScrollView>
