<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/layout_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="@dimen/margin_new"
        android:layout_marginRight="@dimen/margin_new"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/tanggal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tanggal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="12dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/pembanding9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="12dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tanggal_isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/08/2016"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <TableLayout
            android:layout_marginTop="@dimen/margin_absensi_form"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tanggal_info"
            android:background="@color/white">
            <TableRow
                >
                <TextView
                    android:id="@+id/nomor_ttk_header"
                    android:text="Nomor TTK"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:textColor="@color/main_textcolor"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/background_table"
                    android:layout_column="0"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/koli_header"
                    android:text="Koli"
                    android:background="@drawable/background_table"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/main_textcolor"
                    android:layout_column="1"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:id="@+id/berat_header"
                    android:text="Berat"
                    android:background="@drawable/background_table"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:textColor="@color/main_textcolor"
                    android:layout_column="2"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:id="@+id/status_header"
                    android:text="Status"
                    android:background="@drawable/background_table"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:textColor="@color/main_textcolor"
                    android:layout_column="3"
                    android:layout_weight="1">
                </TextView>

            </TableRow>
            <!--<ListView-->
            <!--android:id="@+id/list_delivery_note_list"-->
            <!--android:scrollbars="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:translationZ="100dp"-->
            <!--&gt;-->
            <!--</ListView>-->
            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp">
            </LinearLayout>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>