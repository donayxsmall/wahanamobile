                        android:layout_width="wrap_content"
                        android:buttonTint="#000000"
                        android:drawable="@drawable/custom_radiobutton"
                        android:layout_height="wrap_content"
                        android:text="TIDAK"
                        android:textColor="@color/main_textcolor" />
                </RadioGroup>
