<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:translationZ="100dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    >
    <com.wahana.wahanamobile.VerticalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:clipChildren="false"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:background="@color/material_yellow"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    app:layout_scrollFlags="enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:id="@+id/layout_form"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="100dp">
                <RelativeLayout
                    android:id="@+id/info_layout"
                    android:layout_marginTop="@dimen/margin_toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:translationZ="100dp"
                    android:padding="15dp"
                    android:layout_marginLeft="@dimen/margin_root"
                    android:layout_marginRight="@dimen/margin_root"
                    android:layout_marginBottom="@dimen/margin_new"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_layout"
                    >
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        >
                        <TableRow>
                            <ImageView
                                android:id="@+id/calendar_label"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/calendar_icon"
                                android:textColor="@color/primary_dark"
                                />
                            <TextView
                                android:id="@+id/calendar_isi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:textColor="@color/headermain_textcolor"
                                android:text="@string/calendar_isi"
                                android:textSize="16sp"/>
                        </TableRow>
                        <TableRow>
                            <ImageView
                                android:id="@+id/tanggal_jam_label"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/time_icon"
                                android:textColor="@color/primary_dark"/>
                            <TextView
                                android:id="@+id/tanggal_jam_isi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:textColor="@color/headermain_textcolor"
                                android:text="@string/tanggal_jam_isi"
                                android:textSize="16sp"/>
                        </TableRow>

                    </TableLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        >
                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TableRow>

                                <ImageView
                                    android:id="@+id/kurir_label"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/people_icon"
                                    android:textColor="@color/primary_dark"/>
                                <TextView
                                    android:id="@+id/pengisi_isi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_absensi_form"
                                    android:textColor="@color/headermain_textcolor"
                                    android:text="@string/pengisi_absensi_isi"
                                    android:textSize="16sp"/>
                            </TableRow>
                        </TableLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:translationZ="100dp"
                    android:padding="15dp"
                    android:layout_marginLeft="@dimen/margin_root"
                    android:layout_marginRight="@dimen/margin_root"
                    android:layout_marginBottom="@dimen/margin_root"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_layout"
                    android:layout_below="@+id/info_layout"
                    >
                    <TableLayout
                        android:id="@+id/table_terkirim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <ImageView
                                android:id="@+id/img_terkirim"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ceklis_icon"

                                android:textColor="@color/primary_dark"
                                />
                            <TextView
                                android:id="@+id/judul_status_terkirim_isi"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_absensi_form"
                                android:textColor="@color/headermain_textcolor"
                                android:text="PENERIMAAN RETUR"
                                android:textSize="16sp"/>
                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:id="@+id/tabel_penerima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_input_penerima"
                        android:orientation="horizontal"
                        android:weightSum="1.0"></LinearLayout>
                    <!--<LinearLayout-->
                    <!--android:id="@+id/layout_keterangan"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:weightSum="1.0"-->
                    <!--android:layout_below="@+id/table_terkirim">-->
                    <!--<TextView-->
                    <!--android:id="@+id/keterangan_label"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="@dimen/margin_absensi_form"-->
                    <!--android:textColor="@color/headermain_textcolor"-->
                    <!--android:text="ALASAN RETUR"-->
                    <!--android:textSize="16sp"-->
                    <!--android:layout_weight="0.7"/>-->
                    <!--</LinearLayout>-->
                    <!--<Spinner-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:id="@+id/alasan_retur"-->
                    <!--android:background="@drawable/gradient_spinner"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:hint="Masukkan alasan retur"-->
                    <!--android:popupBackground="@color/material_indigo"-->
                    <!--android:layout_below="@+id/layout_keterangan"-->
                    <!--/>-->
                    <LinearLayout
                        android:id="@+id/tabel_foto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/table_terkirim"
                        android:orientation="horizontal"
                        android:weightSum="1.0">
                        <TextView
                            android:id="@+id/foto_diri_label"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="FOTO 1"
                            android:textColor="@color/main_textcolor"
                            android:layout_weight="0.7"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/listView"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/tabel_foto"
                        />

                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_submit_foto"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Ambil Foto"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        android:layout_below="@+id/listView"
                        android:layout_marginTop="10dp"
                        />

                    <LinearLayout
                        android:id="@+id/tabel_foto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_submit_foto"
                        android:orientation="horizontal"
                        android:weightSum="1.0">
                        <TextView
                            android:id="@+id/foto_diri_label2"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="FOTO 2 "
                            android:textColor="@color/main_textcolor"
                            android:layout_weight="0.7"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/listView2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/tabel_foto2"
                        />

                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_submit_foto2"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Ambil Foto"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        android:layout_below="@+id/listView2"
                        android:layout_marginTop="10dp"
                        />

                    <LinearLayout
                        android:id="@+id/tabel_foto3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_submit_foto2"
                        android:orientation="horizontal"
                        android:weightSum="1.0">
                        <TextView
                            android:id="@+id/foto_diri_label3"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="FOTO 3"
                            android:textColor="@color/main_textcolor"
                            android:layout_weight="0.7"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/listView3"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/tabel_foto3"
                        />

                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_submit_foto3"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Ambil Foto"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        android:layout_below="@+id/listView3"
                        android:layout_marginTop="10dp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_bottom"
                    android:background="#222a2a"
                    android:translationZ="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="25dp"
                    android:layout_below="@+id/main_layout"
                    >
                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/input_button"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/input_kode_agen"
                        android:layout_height="30dp"
                        android:textSize="16sp"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        android:text="SUBMIT"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>
    </com.wahana.wahanamobile.VerticalScrollView>
</android.support.v4.widget.DrawerLayout>
