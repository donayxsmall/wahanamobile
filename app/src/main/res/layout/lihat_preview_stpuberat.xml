<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_layout">
        <TableLayout
            android:id="@+id/tabel_detail_koli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/no_urut_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingRight="0dip"
                    android:paddingLeft="5dip"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="1"/>
                <TextView
                    android:id="@+id/pembandingurut"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingLeft="0dip"
                    android:paddingRight="10dip"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="."/>

                <TextView
                    android:id="@+id/no_ttk_isi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:padding="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="6767"/>
            </TableRow>

        </TableLayout>


        <TableLayout
            android:layout_below="@id/tabel_detail_koli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginLeft="30dp"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/ket"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingRight="0dip"
                    android:paddingLeft="5dip"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Berat"/>
                <TextView
                    android:id="@+id/pembandingket"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingLeft="0dip"
                    android:paddingRight="10dip"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text=":"/>

                <TextView
                    android:id="@+id/berat"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:padding="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="6767"/>
            </TableRow>


            <TableRow
                android:layout_marginLeft="30dp"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/ket1"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingRight="0dip"
                    android:paddingLeft="5dip"

                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Dimensi"/>
                <TextView
                    android:id="@+id/pembandingket1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:paddingLeft="0dip"
                    android:paddingRight="10dip"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text=":"/>

                <TextView
                    android:id="@+id/dimensi"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/main_textcolor"
                    android:padding="1dip"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="1x2x3"/>
            </TableRow>


        </TableLayout>


    </RelativeLayout>
</RelativeLayout>
