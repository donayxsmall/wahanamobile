<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >
        <ImageView
            android:id="@+id/image_agen"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/lokasi_agen"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/alamat_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:textSize="12dp"/>
            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_weight="1.0">
                <TextView
                    android:id="@+id/phone_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:text="Phone"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/pembanding"
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:textSize="12dp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/phone_isi"
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_layout"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/email_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:text="Email"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/pembanding1"
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:textSize="12dp"
                    android:text=":"/>
                <TextView
                    android:id="@+id/email_isi"
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_textcolor"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/direction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_layout"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image_direction"
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="20dp"
                    android:textColor="@color/main_textcolor"
                    android:src="@drawable/navigate_icon"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/direction_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Get Direction"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/lat_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/long_label"
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/jarak_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_textcolor"
                android:textSize="12dp"
                android:text=" km"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
