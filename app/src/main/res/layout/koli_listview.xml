<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:padding="15dp"
        android:layout_marginLeft="@dimen/margin_root"
        android:layout_marginRight="@dimen/margin_root"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/kode_sortir_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/kode_sortir_label"/>
                <TextView
                    android:id="@+id/pembanding"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/kode_sortir_isi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="6767"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/kode_koli_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/kode_koli_label"/>
                <TextView
                    android:id="@+id/pembanding1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/kode_koli_isi"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/headermain_textcolor"
                    android:padding="5dip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="6767"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>
