<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:gravity="left"
        android:id="@+id/list_isi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_layout_2">
        <TableLayout
            android:gravity="center"
            android:id="@+id/tabel_detail_koli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/row">
                <TextView
                    android:id="@+id/no_urut_label"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:paddingRight="0dip"
                    android:paddingLeft="5dip"
                    android:visibility="gone"

                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="1"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/pembandingurut"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:paddingLeft="0dip"
                    android:paddingRight="10dip"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="."/>

                <TextView
                    android:id="@+id/no_ttk_isi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:padding="1dip"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:text="6767"/>

                </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/baris2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:padding="1dip"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="6767sadsadsadsadsads"/>

                <TextView
                    android:id="@+id/tujuan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:padding="1dip"
                    android:layout_marginLeft="10dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="666"
                    android:visibility="gone"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>
