<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:translationZ="100dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    >
<com.wahana.wahanamobile.VerticalScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/material_yellow"
                android:textAlignment="center"
                android:layout_gravity="center"
                app:layout_scrollFlags="enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/layout_form"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="100dp"
            android:orientation="vertical">
            <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_marginTop="110dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:translationZ="100dp"
            android:padding="15dp"
            android:layout_marginLeft="@dimen/margin_root"
            android:layout_marginRight="@dimen/margin_root"
            android:layout_marginBottom="@dimen/margin_new"
            android:orientation="vertical"
            android:background="@drawable/rounded_layout"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                >
                <TableRow>
                    <ImageView
                        android:id="@+id/calendar_label"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/calendar_icon"
                        android:textColor="@color/primary_dark"
                        />
                    <TextView
                        android:id="@+id/calendar_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:textColor="@color/headermain_textcolor"
                        android:text="@string/calendar_isi"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <ImageView
                        android:id="@+id/tanggal_jam_label"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/time_icon"
                        android:textColor="@color/primary_dark"/>
                    <TextView
                        android:id="@+id/tanggal_jam_isi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:textColor="@color/headermain_textcolor"
                        android:text="@string/tanggal_jam_isi"
                        android:textSize="14sp"/>
                </TableRow>

            </TableLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:id="@+id/kurir_label"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/people_icon"
                            android:textColor="@color/primary_dark"/>
                        <TextView
                            android:id="@+id/pengisi_isi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:textColor="@color/headermain_textcolor"
                            android:text="@string/pengisi_absensi_isi"
                            android:textSize="14sp"/>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </RelativeLayout>
            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:translationZ="100dp"
                android:padding="15dp"
                android:layout_marginLeft="@dimen/margin_root"
                android:layout_marginRight="@dimen/margin_root"
                android:layout_marginBottom="@dimen/margin_root"
                android:orientation="vertical"
                android:background="@drawable/rounded_layout"
                android:layout_below="@+id/info_layout"
                >
                <TableLayout
                    android:id="@+id/table_belum_terkirim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <ImageView
                            android:id="@+id/img_belum_terkirim"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tidak_terkirim_icon_black"

                            android:textColor="@color/primary_dark"
                            />
                        <TextView
                            android:id="@+id/judul_status_belum_terkirim_isi"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_absensi_form"
                            android:textColor="@color/headermain_textcolor"
                            android:text="@string/main_status_belum_terkirim"
                            android:textSize="14sp"/>
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:id="@+id/tabel_ttk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/table_belum_terkirim">
                    <TextView
                        android:id="@+id/kode_ttk_label"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:textColor="@color/headermain_textcolor"
                        android:text="KODE TTK"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_input_penerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabel_ttk"
                    android:weightSum="1.0">
                    <EditText
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:id="@+id/input_ttk"
                        android:textSize="14sp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/background_input"
                        android:textColor="@color/main_textcolor"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColorHint="@color/headermain_textcolor"
                        android:hint="Masukkan No. TTK"
                       />
                    <EditText
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:textSize="14sp"
                        android:id="@+id/input_ttk_hidden"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:background="@drawable/background_input"
                        android:textColor="@color/main_textcolor"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColorHint="@color/headermain_textcolor"
                        android:hint="Masukkan No. TTK"
                        android:layout_below="@+id/tabel_ttk"
                        android:visibility="gone"
                        />
                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:layout_weight="0.3"
                        android:id="@+id/scan_button"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:layout_width="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="50dp"
                        android:text="SCAN"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_alasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_input_penerima"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <TextView
                        android:id="@+id/alasan_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:textColor="@color/headermain_textcolor"
                        android:text="ALASAN"
                        android:textSize="14sp"
                        android:layout_weight="0.7"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/alasan_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:background="@drawable/gradient_spinner"
                    android:paddingLeft="8dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:popupBackground="@color/material_yellow"
                    android:layout_below="@+id/layout_alasan"
                    />
                <LinearLayout
                    android:id="@+id/layout_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:layout_below="@+id/alasan_spinner">
                    <TextView
                        android:id="@+id/keterangan_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:textColor="@color/headermain_textcolor"
                        android:text="KETERANGAN"
                        android:textSize="14sp"
                        android:layout_weight="0.7"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/input_keterangan"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/background_input"
                    android:textColor="@color/main_textcolor"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@color/headermain_textcolor"
                    android:hint="Masukkan Keterangan"
                    android:layout_below="@+id/layout_keterangan"
                    android:inputType="textMultiLine|textNoSuggestions"/>
                <LinearLayout
                    android:id="@+id/tabel_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_keterangan"
                    android:orientation="horizontal"
                    android:weightSum="1.0">
                    <TextView
                        android:id="@+id/foto_diri_label"
                        android:layout_margin="@dimen/margin_absensi_form"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/main_foto_ttk"
                        android:textColor="@color/main_textcolor"
                        android:layout_weight="0.7"
                        android:textSize="14sp"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/listView"
                    android:visibility="visible"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabel_foto"
                    android:background="@drawable/border_imageview"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/listView"
                    >
                    <com.wahana.wahanamobile.helper.ButtonPlus
                        style="@style/button"
                        android:id="@+id/btn_submit_foto"
                        android:layout_width="90dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Ambil Foto"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:visibility="gone"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:background="@drawable/border_imageview"
                    android:layout_below="@+id/tabel_foto">
                </ImageView>

            </LinearLayout>
            <com.wahana.wahanamobile.helper.ButtonPlus
                style="@style/button"
                android:visibility="gone"
                android:id="@+id/tambah_daftar"
                android:layout_marginLeft="@dimen/margin_root"
                android:layout_marginRight="@dimen/margin_root"
                android:layout_marginBottom="@dimen/margin_root"
                android:translationZ="100dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"
                android:text="TAMBAH DAFTAR"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/white"
                android:layout_below="@+id/main_layout"/>
            <!--<fragment-->
                <!--android:id="@+id/map"-->
                <!--android:layout_margin="@dimen/margin_absensi_form"-->
                <!--android:name="com.wahana.wahanamobile.fragment.MapFragment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="350dp"-->
                <!--android:layout_below="@+id/tambah_daftar"/>-->
            <ImageView
                android:id="@+id/mapView"
                android:layout_marginTop="@dimen/margin_absensi_form"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@+id/tambah_daftar"/>
            <LinearLayout
                android:id="@+id/layout_bottom"
                android:background="#222a2a"
                android:translationZ="100dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="25dp"
                android:layout_alignParentBottom="true"
                android:weightSum="1.0"
                >
                <com.wahana.wahanamobile.helper.ButtonPlus
                    style="@style/button"
                    android:id="@+id/input_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_below="@+id/input_kode_agen"
                    android:layout_height="48dp"
                    android:textSize="14sp"
                    android:background="@drawable/roundedbutton"
                    android:textColor="@color/white"
                    android:text="SUBMIT"/>
                <com.wahana.wahanamobile.helper.ButtonPlus
                    style="@style/button"
                    android:id="@+id/offline_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_below="@+id/input_kode_agen"
                    android:layout_height="48dp"
                    android:textSize="14sp"
                    android:background="@drawable/roundedbutton"
                    android:textColor="@color/white"
                    android:text="OFFLINE"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</com.wahana.wahanamobile.VerticalScrollView>
<ListView
android:id="@+id/list_slidermenu"
android:layout_width="240dp"
android:layout_height="match_parent"
android:layout_gravity="start"
android:choiceMode="singleChoice"
android:translationZ="10dp"
app:headerLayout="@layout/nav_header"
android:divider="#ffffff"
android:dividerHeight="1dp"
android:listSelector="@drawable/list_selector"
android:background="#142631"/>
    </android.support.v4.widget.DrawerLayout>
