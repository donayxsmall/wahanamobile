                                android:padding="5dp"
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_weight="1.0">
                            <ImageView
                                android:id="@+id/img_terkirim"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ceklis_icon"/>
                            <TextView
                                android:id="@+id/terkirim_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="TERKIRIM"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding6"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/terkirim_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:id="@+id/img_tidak_terkirim"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/tidak_terkirim_icon_black"/>
                            <TextView
                                android:id="@+id/tidak_terkirim_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textColor="@color/main_textcolor"
                                android:text="BELUM TERKIRIM"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding5"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tidak_terkirim_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/new_blm_update"/>
                            <TextView
                                android:id="@+id/ttk_belum_terupdate_label"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:padding="5dp"


                                android:textColor="@color/headermain_textcolor"
                                android:text="TTK BELUM UPDATE"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/pembanding13"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:padding="5dp"


                                android:textColor="@color/headermain_textcolor"
                                android:text=":"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/ttk_belum_terupdate_isi"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textColor="@color/headermain_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"/>
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/new_blm_stbt"/>
                            <TextView
                                android:id="@+id/ttk_belum_serah_terima_bt_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_weight="0.5"
                                android:textColor="@color/headermain_textcolor"
                                android:text="TTK SUDAH ST BT"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/pembanding14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_weight="0.1"
                                android:textColor="@color/headermain_textcolor"
                                android:text=":"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/ttk_belum_serah_terima_bt_isi"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_weight="0.3"
                                android:textColor="@color/headermain_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"/>
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:id="@+id/img_berat_total"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/total_berat_black"/>
                            <TextView
                                android:id="@+id/berat_total_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="BERAT TOTAL"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding7"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/berat_total_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:id="@+id/img_berat_terkirim"
                                android:layout_weight="0.1"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:src="@drawable/pickup_icon"/>
                            <TextView
                                android:id="@+id/berat_terkirim_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="BERAT TERKIRIM"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding8"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/berat_terkirim_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:id="@+id/img_poin_kgp"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/poin_icon"/>
                            <TextView
                                android:id="@+id/poin_kgp_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="POIN KGP"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding9"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/poin_kgp_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                        <TableRow
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:weightSum="1.0">
                            <ImageView
                                android:id="@+id/img_poin_kgs"
                                android:layout_height="30dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/poin_icon"/>
                            <TextView
                                android:id="@+id/poin_kgs_label"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="POIN KGS"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/pembanding10"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text=":"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/poin_kgs_isi"
                                android:padding="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="0.3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_textcolor"
                                android:text="N/A"
                                android:textSize="14sp"
                                />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:translationZ="100dp"
        app:headerLayout="@layout/nav_header"
        android:divider="#eeeeee"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="#142631"/>
</android.support.v4.widget.DrawerLayout>
